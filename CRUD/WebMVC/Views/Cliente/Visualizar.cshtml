@model WebMVC.ViewModels.ClienteViewModel

<div class="form">
    <div class="row mt-3 mb-3">
        <div class="col">
            <h4>Cliente</h4>
        </div>
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row mb-3">
        <div class="col-3">
            <div class="form-group">
                @Html.LabelFor(model => model.Cpf, htmlAttributes: new { @class = "form-label fw-bold" })
                <span class="form-control">@Model.Cpf</span>
            </div>
        </div>
        <div class="col-9">
            <div class="form-group">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "form-label fw-bold" })
                <span class="form-control">@Model.Nome</span>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
            <div class="form-group">
                @Html.LabelFor(model => model.Rg, htmlAttributes: new { @class = "form-label fw-bold" })
                <span class="form-control">@Model.Rg</span>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                @Html.LabelFor(model => model.DataExpedicao, htmlAttributes: new { @class = "form-label fw-bold" })
                <span class="form-control">@(Model.DataExpedicao.HasValue ? Model.DataExpedicao.Value.ToShortDateString() : "-")</span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                @Html.LabelFor(model => model.OrgaoExpedicao, htmlAttributes: new { @class = "form-label fw-bold" })
                <span class="form-control">@(Model.OrgaoExpedicao ?? "-")</span>
            </div>
        </div>
        <div class="col-2">
            <div class="form-group">
                @Html.LabelFor(model => model.UfExpedicaoId, htmlAttributes: new { @class = "form-label fw-bold" })
                <span class="form-control">@(Model.UfExpedicaoId.HasValue ? Model.UfExpedicao.Sigla : "-")</span>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
            <div class="form-group">
                @Html.LabelFor(model => model.DataNascimento, htmlAttributes: new { @class = "form-label fw-bold" })
                <span class="form-control">@Model.DataNascimento.ToShortDateString()</span>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                @Html.LabelFor(model => model.Sexo, htmlAttributes: new { @class = "form-label fw-bold" })
                <span class="form-control">@(Model.Sexo == "F" ? "Feminio" : "Masculino")</span>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                @Html.LabelFor(model => model.EstadoCivil, htmlAttributes: new { @class = "form-label fw-bold" })
                <span class="form-control">@Model.EstadoCivil</span>
            </div>
        </div>
    </div>
    <div class="row mt-3 mb-3">
        <div class="col">
            <h4>Endereço</h4>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <div class="form-group">
                @Html.LabelFor(model => model.Endereco.Cep, htmlAttributes: new { @class = "form-label fw-bold" })
                <div class="input-group">
                    <span class="form-control">@Model.Endereco.Cep</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
            <div class="form-group">
                @Html.LabelFor(model => model.Endereco.Logradouro, htmlAttributes: new { @class = "form-label fw-bold" })
                <span class="form-control">@Model.Endereco.Logradouro</span>
            </div>
        </div>
        <div class="col-2 col-xl-1">
            <div class="form-group">
                @Html.LabelFor(model => model.Endereco.Numero, htmlAttributes: new { @class = "form-label fw-bold" })
                <span class="form-control">@Model.Endereco.Numero</span>
            </div>
        </div>
        <div class="col-2">
            <div class="form-group">
                @Html.LabelFor(model => model.Endereco.Complemento, htmlAttributes: new { @class = "form-label fw-bold" })
                <span class="form-control">@(Model.Endereco.Complemento ?? "-")</span>
            </div>
        </div>
        <div class="col-2 col-xl-3">
            <div class="form-group">
                @Html.LabelFor(model => model.Endereco.Bairro, htmlAttributes: new { @class = "form-label fw-bold" })
                <span class="form-control">@Model.Endereco.Bairro</span>
            </div>
        </div>
        <div class="col-2">
            <div class="form-group">
                @Html.LabelFor(model => model.Endereco.Cidade, htmlAttributes: new { @class = "form-label fw-bold" })
                <span class="form-control">@Model.Endereco.Cidade</span>
            </div>
        </div>
        <div class="col-1">
            <div class="form-group">
                @Html.LabelFor(model => model.Endereco.UfId, htmlAttributes: new { @class = "form-label fw-bold" })
                <span class="form-control">@Model.Endereco.Uf.Sigla</span>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col text-center">
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-secondary btn-lg" })
        </div>
    </div>
</div>
